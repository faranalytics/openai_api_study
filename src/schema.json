{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": [
        {
            "type": "object",
            "properties": {
                "hat": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "color": {
                    "type": "string",
                    "pattern": "^[^\\s]+$"
                }
            },
            "required": [
                "hat",
                "description",
                "color"
            ]
        }
    ]
}